layout {
    cwd "/Users/mihlalijordan/Code/w"
    pane split_direction="vertical" {
        pane
    }
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
    swap_floating_layout {
        // 1 pane: centered, using 90% of space
        floating_panes max_panes=1 {
            pane x="5%" y="5%" width="90%" height="90%"
        }
        // 2 panes: side by side, each taking ~47% width
        floating_panes max_panes=2 {
            pane x="2%" y="5%" width="47%" height="90%"
            pane x="51%" y="5%" width="47%" height="90%"
        }
        // 3 panes: 2 on top (45% width each), 1 below (full width)
        floating_panes max_panes=3 {
            pane x="2%" y="5%" width="47%" height="45%"
            pane x="51%" y="5%" width="47%" height="45%"
            pane x="2%" y="52%" width="96%" height="45%"
        }
        // 4 panes: 2x2 grid, each taking ~47% width and 45% height
        floating_panes max_panes=4 {
            pane x="2%" y="5%" width="47%" height="45%"
            pane x="51%" y="5%" width="47%" height="45%"
            pane x="2%" y="52%" width="47%" height="45%"
            pane x="51%" y="52%" width="47%" height="45%"
        }
        // 6 panes: 2x3 grid, 2 rows of 3 panes each (~31% width, 45% height)
        floating_panes max_panes=6 {
            // Top row
            pane x="2%" y="5%" width="31%" height="45%"
            pane x="35%" y="5%" width="31%" height="45%"
            pane x="68%" y="5%" width="31%" height="45%"
            // Bottom row
            pane x="2%" y="52%" width="31%" height="45%"
            pane x="35%" y="52%" width="31%" height="45%"
            pane x="68%" y="52%" width="31%" height="45%"
        }
        // 8 panes: 2x4 grid, 2 rows of 4 panes each (~23% width, 45% height)
        floating_panes max_panes=8 {
            // Top row
            pane x="2%" y="5%" width="23%" height="45%"
            pane x="27%" y="5%" width="23%" height="45%"
            pane x="52%" y="5%" width="23%" height="45%"
            pane x="77%" y="5%" width="23%" height="45%"
            // Bottom row
            pane x="2%" y="52%" width="23%" height="45%"
            pane x="27%" y="52%" width="23%" height="45%"
            pane x="52%" y="52%" width="23%" height="45%"
            pane x="77%" y="52%" width="23%" height="45%"
        }
    }
}
